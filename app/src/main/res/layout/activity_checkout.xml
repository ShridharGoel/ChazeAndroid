<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@drawable/blank"
        android:orientation="vertical"
        tools:context="com.chaze.india.screens.Checkout.CheckoutActivity">


        <TextView
            android:id="@+id/textView18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPurpleLight"
            android:gravity="center"
            android:padding="12dp"
            android:text="Checkout"
            android:textAlignment="center"
            android:textColor="@color/textLightPrimary"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:background="@color/white"
            android:elevation="5dp"
            android:padding="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView18">

            <FrameLayout
                android:id="@+id/mailFrame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp">

                <EditText
                    android:id="@+id/checkoutEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:enabled="false"
                    android:hint="Email address"
                    android:paddingBottom="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="8dp"
                    android:text=""
                    android:textSize="@dimen/text_very_large" />

                <ImageView
                    android:id="@+id/editCheckoutEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:src="@drawable/ic_edit_black_24dp"
                    app:layout_constraintEnd_toEndOf="@+id/checkoutEmail"
                    app:layout_constraintTop_toTopOf="parent" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/nameFrame"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/mailFrame">

                <EditText
                    android:id="@+id/checkoutName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:enabled="false"
                    android:hint="Name"
                    android:paddingBottom="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="8dp"
                    android:text=""
                    android:textSize="@dimen/text_very_large" />

                <ImageView
                    android:id="@+id/editCheckoutName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:src="@drawable/ic_edit_black_24dp" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/phoneFrame"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/nameFrame">

                <EditText
                    android:id="@+id/checkoutPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:enabled="false"
                    android:hint="Phone"
                    android:inputType="text"
                    android:paddingBottom="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="8dp"
                    android:text=""
                    android:textSize="@dimen/text_very_large" />

                <ImageView
                    android:id="@+id/editCheckoutPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:src="@drawable/ic_edit_black_24dp" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/phoneAltFrame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal"
                android:paddingTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/phoneFrame">

                <EditText
                    android:id="@+id/checkoutAltPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Phone(Optional)"
                    android:paddingBottom="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="8dp"
                    android:text=""
                    android:textSize="@dimen/text_very_large">

                    <requestFocus />
                </EditText>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/addressFrame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal"
                android:paddingTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/phoneAltFrame">

                <EditText
                    android:id="@+id/checkoutAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:enabled="false"
                    android:hint="Address"
                    android:paddingBottom="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="8dp"
                    android:text=""
                    android:textSize="@dimen/text_very_large" />

                <ImageView
                    android:id="@+id/editCheckoutAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:src="@drawable/ic_edit_black_24dp" />

            </FrameLayout>

        </android.support.constraint.ConstraintLayout>
        <!--    <FrameLayout
                android:id="@+id/colonyFrame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/houseNoFrame"
                >
                <EditText
                    android:id="@+id/checkoutColony"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
