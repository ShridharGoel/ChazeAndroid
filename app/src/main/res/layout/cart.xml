<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cart_container"
    android:layout_marginRight="15dp"
    android:clickable="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/cart_icon_image_view"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="4dp"
        android:contentDescription="Notification Icon"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_bag" />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cart_count_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/cart_icon_image_view"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@id/cart_icon_image_view"
        android:layout_alignTop="@id/cart_icon_image_view"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:minWidth="15sp"
        android:padding="2dp"
        android:text="12"
        android:textColor="@color/yellow"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/cart_icon_image_view"
        app:layout_constraintStart_toStartOf="@+id/cart_icon_image_view"
        app:layout_constraintTop_toTopOf="@+id/cart_icon_image_view"
        app:layout_constraintVertical_bias="0.83" />
</android.support.constraint.ConstraintLayout>