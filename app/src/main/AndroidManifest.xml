<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chaze.india">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="com.chaze.india.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name="com.chaze.india.screens.Homepage.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name="com.chaze.india.screens.search.SearchActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.chaze.india.screens.Cart.CartActivity" />
        <activity android:name="com.chaze.india.screens.Authentication.Login.LoginActivity">
        </activity>
        <activity android:name="com.chaze.india.screens.WelcomeSlides.StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".screens.Profile.ProfileActivity" />
        <activity android:name=".screens.MyOrders.MyOrdersActivity" />
        <activity android:name=".screens.MyWishList.MyWishListActivity" />
        <activity android:name=".screens.PostOrderStatus.PostOrderStatusActivity" />
        <activity android:name=".screens.Checkout.CheckoutActivity" />
        <activity android:name=".screens.MyOffers.MyOffersActivity" />
        <activity android:name=".screens.ContactUs.ContactUsActivity" />
        <activity android:name=".screens.ProductInfo.ProductInfoActivity" />
        <activity android:name=".screens.Shop.ShopActivity" />
        <activity android:name=".screens.Category.CategoryActivity" />
        <activity android:name=".screens.Referral.ReferralActivity" />
        <activity android:name=".screens.SubCategory.SubCategoryActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".screens.Authentication.Signup.SignUpActivity" />
        <activity android:name=".screens.Authentication.OTPConfirmation.OTPConfirmation" />
        <activity android:name=".screens.Authentication.ChangePassword.ChangePasswordActivity" />


        <service android:name=".service.MyFirebaseInstanceIDService" />
    </application>

</manifest>